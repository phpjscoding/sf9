
<div class="featured-collections mt-4">
    <div class="container mx-auto grid-cols-1 grid md:grid-cols-2 gap-2">
        <div class="featured-c min-h-[300px]  flex">
            <div class="w-1/2 basis-1/2 h-full"> 
            <img class="h-full w-full" src="{{ section.settings.product1_image |  image_url }}" alt="{{ section.settings.product1_text1 }}">
            </div>
           
            <div class="basis-1/2 h-full bg-sky-600 flex flex-col items-start justify-center gap-4 p-4" style="background-color: {{ section.settings.product1_color }};">
                <div class="text-left text-white text-3xl lg:text-4xl font-bold font-['IBM Plex Sans'] uppercase">
                    {{ section.settings.product1_text1 }}
                </div>
                <div class="text-white text-base font-normal font-['IBM Plex Sans'] leading-relaxed">
                    {{ section.settings.product1_text2 }}
                   </div>
                <div class="">
                    <div class=" px-8 py-4 border-2 border-white flex-col justify-start items-center inline-flex">
                        <a href="{{ section.settings.product1_link }}">
                        <div class="text-center text-white text-sm font-bold font-['IBM Plex Sans Condensed'] uppercase leading-[14px] tracking-wider">
                            {{ section.settings.product1_text3 }}
                            </div>
                            </a>
                    </div>
                </div>
              
             
            </div>
           

        </div>
        <div class="featured-c min-h-[300px] bg-red-500 flex">
          
            <div class="h-full basis-1/2">
            <img class="h-full w-full" src="{{ section.settings.product2_image |  image_url }}" alt="{{ section.settings.product2_text1  }}">

            </div> 
            <div class="p-4 basis-1/2 h-full bg-sky-800 flex-col justify-center items-start gap-[15px] inline-flex" style="background-color: {{ section.settings.product2_color }};">
            <div class="text-left text-white  text-2xl lg:text-4xl font-bold font-['IBM Plex Sans'] uppercase ">                    {{ section.settings.product2_text1 }}
                </div>
            <div class="text-white text-base font-normal font-['IBM Plex Sans'] leading-relaxed">
                {{ section.settings.product2_text2 }}
            </div>
            <div class="">
                <div class=" px-8 py-4 border-2 border-white flex-col justify-start items-center inline-flex">
                    <a href="{{ section.settings.product2_link }}">
                    <div class="text-center text-white text-sm font-bold font-['IBM Plex Sans Condensed'] uppercase md:leading-[14px] md:tracking-wider">
                        {{ section.settings.product2_text3 }}
                        </div>
                        </a>
                </div>
            </div>
        </div>

        </div>
        <div class="featured-c relative min-h-[300px] bg-blue-500 md:row-start-1 md:row-end-3 md:col-start-2  md:col-end-3 bg-cover"  style="background-image:url({{ section.settings.product3_image |  image_url}})">
     
        <div class="content absolute inset-0 bg-black bg-opacity-60">
            <div class="flex justify-center items-center gap-4 h-full flex-col">
                <div class=" text-center text-white text-[50px] lg:text-[66px] font-bold font-['IBM Plex Sans'] uppercase lg:leading-[66px]">
                    {{ section.settings.product3_text1 }}
                </div>
                <div class="text-center text-white text-base font-normal font-['IBM Plex Sans'] leading-relaxed">
                    {{ section.settings.product3_text2 }}
                </div>
                <div class="justify-center items-center gap-2.5 inline-flex">
                    <div class="self-stretch px-8 py-4 border-2 border-white flex-col justify-start items-center inline-flex">
                        <a href="{{ section.settings.product3_link  }}">
                        <div class="text-center text-white text-sm font-bold font-['IBM Plex Sans Condensed'] uppercase md:leading-[14px] md:tracking-wider">
                            {{ section.settings.product3_text3 }}
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        </div>
    </div>
</div>


